{
  "name": "rasa-pro-vscode",
  "displayName": "Rasa Pro",
  "description": "Enhanced development experience for Rasa and Rasa Pro projects with smart autocomplete, validation, and CLI integration",
  "version": "0.0.1",
  "publisher": "rcpassos",
  "author": {
    "name": "Rafael Passos"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rcpassos/rasa-pro-vscode"
  },
  "bugs": {
    "url": "https://github.com/rcpassos/rasa-pro-vscode/issues"
  },
  "homepage": "https://github.com/rcpassos/rasa-pro-vscode#readme",
  "license": "MIT",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "rasa",
    "rasa-pro",
    "conversational-ai",
    "chatbot",
    "nlu",
    "dialogue",
    "yaml",
    "assistant",
    "rasa-open-source",
    "machine-learning",
    "nlp"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "workspaceContains:**/domain.yml",
    "workspaceContains:**/config.yml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rasa-explorer",
          "title": "Rasa",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "rasa-explorer": [
        {
          "id": "rasaExplorer",
          "name": "Project Components",
          "when": "rasa-pro-vscode.rasaProjectDetected",
          "icon": "$(list-tree)"
        }
      ]
    },
    "commands": [
      {
        "command": "rasa-pro-vscode.helloWorld",
        "title": "Rasa: Hello World",
        "category": "Rasa"
      },
      {
        "command": "rasa-pro-vscode.trainModel",
        "title": "Rasa: Train Model",
        "category": "Rasa",
        "icon": "$(debug-start)"
      },
      {
        "command": "rasa-pro-vscode.runActionServer",
        "title": "Rasa: Run Action Server",
        "category": "Rasa",
        "icon": "$(server-process)"
      },
      {
        "command": "rasa-pro-vscode.openShell",
        "title": "Rasa: Interactive Shell",
        "category": "Rasa",
        "icon": "$(terminal)"
      },
      {
        "command": "rasa-pro-vscode.runTests",
        "title": "Rasa: Run Tests",
        "category": "Rasa",
        "icon": "$(beaker)"
      },
      {
        "command": "rasa-pro-vscode.refreshExplorer",
        "title": "Refresh",
        "category": "Rasa",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "rasa-pro-vscode.refreshExplorer",
          "when": "view == rasaExplorer",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Rasa Pro",
      "properties": {
        "rasa-pro-vscode.rasaExecutable": {
          "type": "string",
          "default": "rasa",
          "description": "Path to Rasa CLI executable"
        },
        "rasa-pro-vscode.projectRoot": {
          "type": "string",
          "description": "Root directory of Rasa project (auto-detected if not specified)"
        },
        "rasa-pro-vscode.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time validation and diagnostics"
        },
        "rasa-pro-vscode.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "Maximum file size (in bytes) for parsing (default: 1MB)"
        }
      }
    },
    "snippets": [
      {
        "language": "yaml",
        "path": "./snippets/rasa-yaml.json"
      },
      {
        "language": "python",
        "path": "./snippets/rasa-python.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "check": "npm run compile && npm run lint",
    "check:quick": "tsc --noEmit && npm run lint"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "sinon": "^21.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "js-yaml": "^4.1.0"
  }
}
